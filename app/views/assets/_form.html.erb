<%= form_for(@asset) do |f| %>
  <% if @asset.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@asset.errors.count, "error") %> prohibited this project from being saved:</h4>
      <ul>
      <% @asset.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, "Asset Name" %>
    <%= f.text_field :name, class: "form-control", placeholder: "Asset Name" %>  
  </div>

  <div class="form-group">
    <%= f.label :purchase_date, "Purchase Date" %>
    <div class='input-group date js-datepicker'>
        <%= f.text_field :purchase_date, strftime: '%-d %B %Y', class: "form-control", placeholder: "Purchase Date" %>
        <span class="input-group-addon">
          <span class="glyphicon glyphicon-calendar"></span>
        </span>
    </div>
  </div>

  <%= f.submit "Submit", class: "btn btn-primary" %>
<% end %>