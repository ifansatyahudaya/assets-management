<%= form_for(@transaction, html: { multipart: true }) do |f| %>
  <% if @transaction.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@transaction.errors.count, "error") %>Probohited this project from being saved:</h4>
        <ul>
          <%= @transaction.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
        </ul> 
    </div>
  <% end %>


  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control", placeholder: "Title Name" %>  
  </div>

  <div class="form-group">
    <%= f.label :date_transaction, "Date of Transaction" %>
    <div class='input-group date js-datepicker'>
      <%= f.text_field :date_transaction, strftime: '%-d %B %Y', class: "form-control", placeholder: "Date of Transaction" %>
      <span class="input-group-addon">
        <span class="glyphicon glyphicon-calendar"></span>
      </span>  
    </div>  
  </div>

  <div class="form-group">
    <%= f.label :price %>
    <%= f.text_field :price, class: "form-control", placeholder: "Price" %>  
  </div>

  <div class="form-group">
    <%= f.label :attachment %>
    <%= f.file_field :attachment %>  
  </div>

  <%= f.submit "Submit", class: "btn btn-primary" %>
<% end %>